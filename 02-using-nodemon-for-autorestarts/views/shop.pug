extends layouts/main-layout 

block styles
  link(rel='stylesheet' href='/css/product.css')

block content 
  main
    h1 My Products
    if products.length > 0
      .grid 
          each prod in products 
              article.card.product-item 
                  header.card__header 
                      h1.product__title #{ prod.title }
                  .card__image 
                      img(src="https://store.storeimages.cdn-apple.com/4982/as-images.apple.com/is/MX472?wid=1144&hei=1144&fmt=jpeg&qlt=95&.v=1570119347612", alt="Slisalice")
                  div.card__content
                      h2.product__price $#{ prod.price }
                      p.product__description Very Good Book
                  .card__actions 
                      button.btn Add To Cart
    else 
      h1 No products